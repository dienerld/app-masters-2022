{
  "openapi": "3.0.2",
  "info": {
    "title": "API",
    "description": "API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://doar-computador.herokuapp.com/"
    }
  ],
  "tags": [
    {
      "name": "root",
      "description": "route /"
    },
    {
      "name": "donation",
      "description": "route /donation"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["root"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "alive": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/donation": {
      "post": {
        "tags": ["donation"],
        "operationId": "PostDonation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "name",
                  "zip",
                  "city",
                  "state",
                  "streetAddress",
                  "neighborhood",
                  "number",
                  "phone",
                  "deviceCount",
                  "devices"
                ],
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "zip": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "complement": {
                    "type": "string"
                  },
                  "streetAddress": {
                    "type": "string"
                  },
                  "number": {
                    "type": "number"
                  },
                  "neighborhood": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "deviceCount": {
                    "type": "number"
                  },
                  "devices": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": [
                            "desktop",
                            "netbook",
                            "screen",
                            "scanner",
                            "printer"
                          ]
                        },
                        "condition": {
                          "type": "string",
                          "enum": ["broken", "working", "notWorking"]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "boolean" },
                    "errorMessage": {
                      "type": "string",
                      "example": "Todos os campos obrigat√≥rios devem ser informados"
                    },
                    "requiredFields": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["name", "zip", "city", "state"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
